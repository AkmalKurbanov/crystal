          .header__contacts
            p
              i.far.fa-map-marker-alt
              |Кыргызская Респеблика, <br> г.Бишкек,пр.Чуй 147/1
            ul
              li
                i.fal.fa-phone
                a(href="tel:+996554110033") +996 (554) 11 00 33
              li
                i.fab.fa-whatsapp
                a(href="tel:+996504110033") +996 (504) 11 00 33
        .header__masterbar-item
          .btn-wrap.btn-wrap_right 
            a.btn(href="#") Оставить заявку
  .header__nav
    .container
      nav.nav
        ul.nav__wrap
          mixin navItem(item ,link)
            li.nav__item
              a.nav__link(href=link)=item
          +navItem('Главная','#')
