    .container
      .header__top-wrap
        .header__top-item
          i.fal.fa-clock
          p c 9:00 до 20:00 (без выходных и праздников)
        .header__top-item
          i.fal.fa-envelope
          a(href="mailto:crystallux.kg@gmail.com")  crystallux.kg@gmail.com
        .header__top-item
          .social
            ul
              mixin social(icon, link)
                li
                  a(href=link)
                    i(class=icon)
              +social('fab fa-instagram','#')      
              +social('fab fa-facebook-f','#')      
  .header__masterbar
    .container
      .header__masterbar-wrap
        .header__masterbar-item
          .header__logo
            a(href="#")
